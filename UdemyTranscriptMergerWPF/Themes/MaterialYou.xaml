<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:helpers="clr-namespace:UdemyTranscriptMergerWPF.Helpers">

    <!-- ============================================================
         MATERIAL YOU — ORANGE TONAL PALETTE (PASTEL FF8A50)
         ============================================================ -->

    <!-- LIGHT THEME COLORS -->
    <Color x:Key="md.sys.color.primary">#FF8A50</Color>
    <Color x:Key="md.sys.color.onPrimary">#FFFFFF</Color>
    <Color x:Key="md.sys.color.primaryContainer">#FFE1CC</Color>
    <Color x:Key="md.sys.color.onPrimaryContainer">#3A1A00</Color>

    <Color x:Key="md.sys.color.surface">#FFFFFF</Color>
    <Color x:Key="md.sys.color.surfaceContainerHigh">#F3F3F3</Color>
    <Color x:Key="md.sys.color.onSurface">#1C1C1C</Color>
    <Color x:Key="md.sys.color.outline">#A6A6A6</Color>

    <!-- DARK THEME COLORS -->
    <Color x:Key="md.sys.color.primary.dark">#FFB693</Color>
    <Color x:Key="md.sys.color.onPrimary.dark">#4A2A16</Color>
    <Color x:Key="md.sys.color.primaryContainer.dark">#5A3825</Color>
    <Color x:Key="md.sys.color.onPrimaryContainer.dark">#FFDCCB</Color>

    <Color x:Key="md.sys.color.surface.dark">#1E1E1E</Color>
    <Color x:Key="md.sys.color.surfaceContainerHigh.dark">#2B2B2B</Color>
    <Color x:Key="md.sys.color.onSurface.dark">#FFFFFF</Color>
    <Color x:Key="md.sys.color.outline.dark">#707070</Color>


    <!-- LIGHT BRUSHES -->
    <SolidColorBrush x:Key="PrimaryBrush.light" Color="{StaticResource md.sys.color.primary}"/>
    <SolidColorBrush x:Key="PrimaryContainerBrush.light" Color="{StaticResource md.sys.color.primaryContainer}"/>
    <SolidColorBrush x:Key="ForegroundPrimaryBrush.light" Color="{StaticResource md.sys.color.onPrimary}"/>

    <SolidColorBrush x:Key="BackgroundColorBrush.light" Color="{StaticResource md.sys.color.surface}"/>
    <SolidColorBrush x:Key="PanelColorBrush.light" Color="{StaticResource md.sys.color.surfaceContainerHigh}"/>
    <SolidColorBrush x:Key="BoxColorBrush.light" Color="{StaticResource md.sys.color.surfaceContainerHigh}"/>
    <SolidColorBrush x:Key="ForegroundColorBrush.light" Color="{StaticResource md.sys.color.onSurface}"/>
    <SolidColorBrush x:Key="OutlineBrush.light" Color="{StaticResource md.sys.color.outline}"/>


    <!-- DARK BRUSHES -->
    <SolidColorBrush x:Key="PrimaryBrush.dark" Color="{StaticResource md.sys.color.primary.dark}"/>
    <SolidColorBrush x:Key="PrimaryContainerBrush.dark" Color="{StaticResource md.sys.color.primaryContainer.dark}"/>
    <SolidColorBrush x:Key="ForegroundPrimaryBrush.dark" Color="{StaticResource md.sys.color.onPrimary.dark}"/>

    <SolidColorBrush x:Key="BackgroundColorBrush.dark" Color="{StaticResource md.sys.color.surface.dark}"/>
    <SolidColorBrush x:Key="PanelColorBrush.dark" Color="{StaticResource md.sys.color.surfaceContainerHigh.dark}"/>
    <SolidColorBrush x:Key="BoxColorBrush.dark" Color="{StaticResource md.sys.color.surfaceContainerHigh.dark}"/>
    <SolidColorBrush x:Key="ForegroundColorBrush.dark" Color="{StaticResource md.sys.color.onSurface.dark}"/>
    <SolidColorBrush x:Key="OutlineBrush.dark" Color="{StaticResource md.sys.color.outline.dark}"/>

    <!-- ACTIVE (currently selected theme) -->
    <SolidColorBrush x:Key="PrimaryBrush" Color="{StaticResource md.sys.color.primary}"/>
    <SolidColorBrush x:Key="BackgroundColorBrush" Color="{StaticResource md.sys.color.surface}"/>
    <SolidColorBrush x:Key="PanelColorBrush" Color="{StaticResource md.sys.color.surfaceContainerHigh}"/>
    <SolidColorBrush x:Key="BoxColorBrush" Color="{StaticResource md.sys.color.surfaceContainerHigh}"/>
    <SolidColorBrush x:Key="ForegroundColorBrush" Color="{StaticResource md.sys.color.onSurface}"/>
    <SolidColorBrush x:Key="OutlineBrush" Color="{StaticResource md.sys.color.outline}"/>


    <!-- ============================================================
         TYPOGRAPHY (ROBOTO / SEGOE UI)
         ============================================================ -->
    <FontFamily x:Key="AppFont">Segoe UI</FontFamily>

    <Style TargetType="TextBlock">
        <Setter Property="FontFamily" Value="{StaticResource AppFont}"/>
        <Setter Property="Foreground" Value="{StaticResource ForegroundColorBrush}"/>
    </Style>


    <!-- ============================================================
         MATERIAL SHADOWS (ELEVATION)
         ============================================================ -->
    <DropShadowEffect x:Key="Elevation1" BlurRadius="8" ShadowDepth="2" Opacity="0.18"/>
    <DropShadowEffect x:Key="Elevation2" BlurRadius="14" ShadowDepth="4" Opacity="0.22"/>
    <DropShadowEffect x:Key="Elevation3" BlurRadius="22" ShadowDepth="6" Opacity="0.25"/>


    <!-- ============================================================
         BUTTON STYLES (Primary / Secondary / Icon)
         ============================================================ -->

    <!-- PRIMARY BUTTON (Rounded 20) -->
    <Style x:Key="PrimaryButtonStyle" TargetType="Button">
        <Setter Property="Background" Value="{StaticResource PrimaryBrush}"/>
        <Setter Property="Foreground" Value="{StaticResource ForegroundPrimaryBrush}"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Padding" Value="12 6"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="Effect" Value="{StaticResource Elevation1}"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type Button}">
                    <Border Background="{TemplateBinding Background}"
                            CornerRadius="20">
                        <ContentPresenter HorizontalAlignment="Center"
                                          VerticalAlignment="Center"/>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>


    <!-- SECONDARY BUTTON -->
    <Style x:Key="SecondaryButtonStyle" TargetType="Button">
        <Setter Property="Background" Value="{StaticResource BoxColorBrush}"/>
        <Setter Property="Foreground" Value="{StaticResource ForegroundColorBrush}"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Padding" Value="12 6"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type Button}">
                    <Border Background="{TemplateBinding Background}"
                            CornerRadius="20">
                        <ContentPresenter HorizontalAlignment="Center"
                                          VerticalAlignment="Center"/>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>


    <!-- ICON BUTTON -->
    <Style x:Key="IconButtonStyle" TargetType="Button">
        <Setter Property="Background" Value="{StaticResource BoxColorBrush}"/>
        <Setter Property="Foreground" Value="{StaticResource ForegroundColorBrush}"/>
        <Setter Property="Padding" Value="6"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="Width" Value="36"/>
        <Setter Property="Height" Value="32"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border Background="{TemplateBinding Background}"
                            CornerRadius="12">
                        <ContentPresenter HorizontalAlignment="Center"
                                          VerticalAlignment="Center"/>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>


    <!-- ============================================================
         LISTBOX / TEXTBOX / INPUT STYLES
         ============================================================ -->




    <!-- LISTBOX -->
    <Style TargetType="ListBox">
        <Setter Property="Background" Value="{StaticResource BoxColorBrush}"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Padding" Value="10"/>
        <Setter Property="FontSize" Value="15"/>
    </Style>


    <Style x:Key="OutlinedTextBox" TargetType="TextBox">
        <Setter Property="SnapsToDevicePixels" Value="True"/>
        <Setter Property="Padding" Value="10"/>
        <Setter Property="Foreground" Value="{DynamicResource ForegroundColorBrush}"/>
        <Setter Property="Background" Value="{DynamicResource BoxColorBrush}"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="TextBox">
                    <Border x:Name="Bd"
                        CornerRadius="20"
                        Background="{TemplateBinding Background}"
                        BorderBrush="{DynamicResource OutlineBrush}"
                        BorderThickness="1.8"
                        SnapsToDevicePixels="True">
                        <ScrollViewer x:Name="PART_ContentHost"
                                  Margin="6"
                                  VerticalScrollBarVisibility="Hidden"
                                  HorizontalScrollBarVisibility="Hidden"/>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
        <Style.Triggers>
            <Trigger Property="IsKeyboardFocused" Value="True">
                <Setter Property="BorderBrush" Value="{DynamicResource PrimaryBrush}" />
                <Setter Property="BorderThickness" Value="2.2"/>
            </Trigger>
        </Style.Triggers>
    </Style>
    
    <helpers:LogTypeToBrushConverter x:Key="LogTypeToBrush" />
    <helpers:BubbleAlignmentConverter x:Key="BubbleAlignmentConverter" />


    <DataTemplate x:Key="ChatBubbleTemplate">
        <Border Padding="12"
                CornerRadius="20"
                MaxWidth="420"
                Margin="8"
                Background="{Binding Type, Converter={StaticResource LogTypeToBrush}}"
                HorizontalAlignment="{Binding Type, Converter={StaticResource BubbleAlignmentConverter}}">
            <StackPanel>
                <TextBlock Text="{Binding Text}"
                           FontSize="15"
                           TextWrapping="Wrap"
                           Foreground="White"/>

                <TextBlock Text="{Binding Time, StringFormat='{}{0:HH:mm}'}"
                           Foreground="#DDFFFFFF"
                           FontSize="11"
                           Margin="0 4 0 0"
                           HorizontalAlignment="Right"/>
            </StackPanel>
        </Border>
    </DataTemplate>

</ResourceDictionary>
